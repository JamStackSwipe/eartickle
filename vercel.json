{
  "builds": [
    { "src": "build/index.html", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/static/(.*)", "dest": "/build/static/$1" },
    { "src": "/(.*)", "dest": "/build/index.html" }
  ]
}
